@page "/learnBlazor/parentcomponent"
<h3>ParentComponent</h3>
<CascadingValue Value="MessageForGrandChild" Name="message">
    <CascadingValue Value="LuckyNumber" Name="luckyNumber">
        <_ChildComponent @ref="childComp" OnButtonClick="ShowMessage" Title="Inherited from Parent Component">
    
    <ChildContent>Render Fragment from parent component</ChildContent>
    <DangerChildContent>Danger Child Content</DangerChildContent>
   
   
</_ChildComponent>
</CascadingValue>
</CascadingValue>
<_AnotherChildComponent InputAttributes="ParentInputAttributes"></_AnotherChildComponent>
<p>@messageText</p>

<div class="row">
    <button class="btn btn-success" @onclick="()=>childComp.ToastrSuccess()">Sweet Success</button>
</div>
@code {
    private _ChildComponent childComp;
    [Parameter]
    public string MessageForGrandChild { get; set; } = "This message is from your child component (ParentComponent)";

    [Parameter]
    public int LuckyNumber { get; set; } = 24;

    public Dictionary<string, object> ParentInputAttributes { get; set; } = new Dictionary<string, object>()
    {
        {"required", "required"},
        {"placeholder", "Parent"},
        {"maxlength", 10}
    };
    public string messageText ="";

    private void ShowMessage()
    {
        messageText = "Button clicked";

    }
}
